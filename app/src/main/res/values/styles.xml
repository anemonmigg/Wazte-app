<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FormInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/form_input_bg</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:fontFamily">@font/wixmadefortext_regular</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/color_main</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FormInputError" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/input_error</item>
        <item name="android:fontFamily">@font/wixmadefortext_regular</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/wix_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>